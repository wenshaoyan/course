<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.bannerMapper">
    <insert id="insert" parameterType="_Banner" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_banner(banner_create_time,banner_update_time,banner_user_id,
        banner_image_url,banner_redirect_url,banner_show_client_id,banner_location)
        VALUES(NOW(3),NOW(3),#{user_id},#{image_url},#{redirect_url},#{show_client_id},#{location})

    </insert>
    <select parameterType="_Banner" id="select" resultMap="bannerResult">
      select *
      from t_banner
      <where>
          <if test="show_client_id != 0 and  show_client_id != null" >
              banner_show_client_id = #{show_client_id}
          </if>
          <if test="user_id != 0 and user_id != null">
              AND banner_user_id = #{user_id}
          </if>
          <if test="id != 0 and id != null">
              AND banner_id = #{id}
          </if>
      </where>
      ORDER BY banner_show_client_id,banner_location

    </select>


    <update id="update" parameterType="_Banner" >
        
    </update>
    <resultMap id="bannerResult" type="_Banner">
        <id property="id" column="banner_id"/>
        <result property="create_time_bean" column="banner_create_time"/>
        <result property="update_time_bean" column="banner_update_time"/>
        <result property="user_id" column="banner_user_id"/>
        <result property="redirect_url" column="banner_redirect_url"/>
        <result property="redirect_url" column="banner_redirect_url"/>
        <result property="show_client_id" column="banner_show_client_id"/>
        <result property="location" column="banner_location"/>
    </resultMap>
</mapper>